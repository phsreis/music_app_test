<p style="color: green"><%= notice %></p>

<div class="container d-flex flex-column justify-content-center">
  <div class= "p">
    <div class="p-5 bg-light border rounded">
      <p class= "h4"> Album </p>
      <%= render @album %>
      <p class= "h4"> Artist </p>
      <%= render @album.artist %>
    </div>
  </div>
  
  <div class="d-flex justify-content-end mt-3">
    <%= link_to "Edit this album", edit_album_path(@album), class:'btn btn-primary me-3' %>
    <%= link_to "Back to albums", albums_path, class:'btn btn-secondary me-3' %>

    <%= button_to "Destroy this album", @album, method: :delete, class: 'btn btn-danger' %>
  </div> 
</div> 
